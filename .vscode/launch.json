		{
			"name": "Debug findReferences",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "${file}",
			"args": [ "Hobson" ],
			"env": {
				"BASE": "${workspaceRoot}",
				"EXT": "${fileExtname}",
				"tempCitationStyle": "Pandoc",
				"alfred_version": "13",
				"attachmentsFolder": "/Users/ian/Library/Mobile Documents/iCloud~com~sonnysoftware~bot/Documents/"
			}
		},
		{
			"name": "scopusSearch Debug",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "${file}",
			"args": [ "" ],
			"env": {
				"BASE": "${workspaceRoot}",
				"EXT": "${fileExtname}",
				"appendScopusNotes": "true",
				"alfred_version": "13",
				"scopusKey": "7f59af901d2d86f78a1fd60c1bf9426a",
				"scopusBaseURL": "https://www-scopus-com-443.webvpn.las.ac.cn/"
			}
		},
		{
			"name": "Listen for rdebug-ide",
			"type": "Ruby",
			"request": "attach",
			"cwd": "${workspaceRoot}",
			"remoteHost": "127.0.0.1",
			"remotePort": "1234",
			"remoteWorkspaceRoot": "${workspaceRoot}"
